{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/*.ts", "src/*.vue", "playground/*.ts", "playground/*.vue"],
  "exclude": ["src/**/__tests__/*", "./dist/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["node"],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "~/*": ["."],
      "@/*": ["src/*"]
    },
    "outDir": "./dist"
  }
}
